---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Testimonials from "../components/Testimonials.astro";
import CallToAction from "../components/CallToAction.astro";
import Footer from "../components/Footer.astro";
import { useTranslations } from "../i18n/translations";

const lang = "fr";
const t = useTranslations(lang);
---

<Layout title="Comment participer - Pachatopia" lang={lang}>
  <Header lang={lang} />
  <main>
    <!-- Hero Banner -->
    <section class="relative py-24 md:py-36 overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-br from-primary via-primary-light to-accent"></div>
      <!-- Decorative organic shapes -->
      <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <svg class="absolute -top-16 -left-16 w-80 h-80 text-white/[0.04]" viewBox="0 0 400 400" fill="currentColor">
          <path d="M201.5,6.5Q256,13,290,56.5Q324,100,349.5,150Q375,200,349.5,250Q324,300,284,340.5Q244,381,197,374.5Q150,368,111,337Q72,306,44,256Q16,206,37.5,153Q59,100,104.5,63Q150,26,201.5,6.5Z" />
        </svg>
        <svg class="absolute bottom-0 right-0 w-96 h-96 text-white/[0.03]" viewBox="0 0 400 400" fill="currentColor">
          <path d="M218,9Q182,18,145.5,42Q109,66,78.5,100.5Q48,135,34,175.5Q20,216,40.5,258Q61,300,100,329Q139,358,183,371.5Q227,385,268,363.5Q309,342,339.5,306Q370,270,381,225Q392,180,371,137Q350,94,317.5,59Q285,24,251.5,10.5Q218,0,218,9Z" />
        </svg>
        <svg class="absolute top-12 right-1/4 w-3 h-3 text-white/20" viewBox="0 0 12 12" fill="currentColor">
          <circle cx="6" cy="6" r="6" />
        </svg>
        <svg class="absolute bottom-16 left-1/3 w-2 h-2 text-white/15" viewBox="0 0 12 12" fill="currentColor">
          <circle cx="6" cy="6" r="6" />
        </svg>
      </div>
      <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-heading font-bold text-white leading-tight mb-6">
          {t("participatePage.title")}
        </h1>
        <p class="text-lg md:text-xl text-white/85 leading-relaxed max-w-2xl mx-auto">
          {t("participatePage.tagline")}
        </p>
      </div>
    </section>

    <!-- Support Section -->
    <section class="py-20 md:py-28 bg-cream">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-heading font-bold text-primary mb-4">
            {t("participatePage.support.title")}
          </h2>
          <div class="w-20 h-1 bg-accent rounded-full mx-auto mb-6"></div>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto leading-relaxed">
            {t("participatePage.support.text")}
          </p>
        </div>

        <!-- Sponsorship / Participation Cards Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">

          <!-- Card 1: Forest Sponsorship -->
          <div
            class="group relative bg-white rounded-2xl p-8 transition-all duration-300 hover:-translate-y-2"
            style="box-shadow: 0 2px 8px rgba(11,91,75,0.06); transition: box-shadow 0.3s ease, transform 0.3s ease;"
            onmouseenter="this.style.boxShadow='0 16px 40px rgba(11,91,75,0.12)'"
            onmouseleave="this.style.boxShadow='0 2px 8px rgba(11,91,75,0.06)'"
          >
            <!-- Price Badge -->
            <div class="absolute top-4 right-4 bg-accent text-white text-sm font-bold px-3 py-1 rounded-full">
              {t("participatePage.forest.price")}
            </div>
            <!-- Icon -->
            <div class="w-14 h-14 rounded-xl bg-primary/10 flex items-center justify-center mb-6 group-hover:bg-primary/15 transition-colors duration-300">
              <svg class="w-7 h-7 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 21v-8m0 0c-2.5-3-5-5-5-8a5 5 0 0110 0c0 3-2.5 5-5 8z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M7 21h10" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 17c-1.5-1-3-2.5-3-5a6 6 0 0112 0c0 2.5-1.5 4-3 5" />
              </svg>
            </div>
            <!-- Title -->
            <h3 class="text-xl font-heading font-bold text-primary mb-3">
              {t("participatePage.forest.title")}
            </h3>
            <!-- Description -->
            <p class="text-gray-600 leading-relaxed text-sm">
              {t("participatePage.forest.desc")}
            </p>
            <!-- Corner accent -->
            <div class="absolute top-0 right-0 w-20 h-20 overflow-hidden rounded-tr-2xl">
              <div class="absolute top-0 right-0 w-20 h-20 bg-primary/[0.04] transform rotate-45 translate-x-10 -translate-y-10 group-hover:bg-primary/[0.08] transition-colors duration-300"></div>
            </div>
          </div>

          <!-- Card 2: Coffee Sponsorship -->
          <div
            class="group relative bg-white rounded-2xl p-8 transition-all duration-300 hover:-translate-y-2"
            style="box-shadow: 0 2px 8px rgba(11,91,75,0.06); transition: box-shadow 0.3s ease, transform 0.3s ease;"
            onmouseenter="this.style.boxShadow='0 16px 40px rgba(11,91,75,0.12)'"
            onmouseleave="this.style.boxShadow='0 2px 8px rgba(11,91,75,0.06)'"
          >
            <!-- Price Badge -->
            <div class="absolute top-4 right-4 bg-accent text-white text-sm font-bold px-3 py-1 rounded-full">
              {t("participatePage.coffee.price")}
            </div>
            <!-- Icon: Coffee bean -->
            <div class="w-14 h-14 rounded-xl bg-earth/10 flex items-center justify-center mb-6 group-hover:bg-earth/15 transition-colors duration-300">
              <svg class="w-7 h-7 text-earth" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17 8C17 8 15 4 12 4C9 4 7 8 7 12C7 16 9 20 12 20C15 20 17 16 17 12" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 4C12 4 10 8 10 12C10 16 12 20 12 20" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M17 12C19 12 21 10 21 8C21 6 19 4 17 4" />
              </svg>
            </div>
            <!-- Title -->
            <h3 class="text-xl font-heading font-bold text-primary mb-3">
              {t("participatePage.coffee.title")}
            </h3>
            <!-- Description -->
            <p class="text-gray-600 leading-relaxed text-sm">
              {t("participatePage.coffee.desc")}
            </p>
            <!-- Corner accent -->
            <div class="absolute top-0 right-0 w-20 h-20 overflow-hidden rounded-tr-2xl">
              <div class="absolute top-0 right-0 w-20 h-20 bg-earth/[0.04] transform rotate-45 translate-x-10 -translate-y-10 group-hover:bg-earth/[0.08] transition-colors duration-300"></div>
            </div>
          </div>

          <!-- Card 3: Cocoa Sponsorship -->
          <div
            class="group relative bg-white rounded-2xl p-8 transition-all duration-300 hover:-translate-y-2"
            style="box-shadow: 0 2px 8px rgba(11,91,75,0.06); transition: box-shadow 0.3s ease, transform 0.3s ease;"
            onmouseenter="this.style.boxShadow='0 16px 40px rgba(11,91,75,0.12)'"
            onmouseleave="this.style.boxShadow='0 2px 8px rgba(11,91,75,0.06)'"
          >
            <!-- Price Badge -->
            <div class="absolute top-4 right-4 bg-accent text-white text-sm font-bold px-3 py-1 rounded-full">
              {t("participatePage.cocoa.price")}
            </div>
            <!-- Icon: Cocoa -->
            <div class="w-14 h-14 rounded-xl bg-earth/10 flex items-center justify-center mb-6 group-hover:bg-earth/15 transition-colors duration-300">
              <svg class="w-7 h-7 text-earth" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 3C8 3 5 7 5 12C5 17 8 21 12 21C16 21 19 17 19 12C19 7 16 3 12 3Z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 3C12 3 9 7 9 12C9 17 12 21 12 21" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 3C12 3 15 7 15 12C15 17 12 21 12 21" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M5.5 9H18.5" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M5.5 15H18.5" />
              </svg>
            </div>
            <!-- Title -->
            <h3 class="text-xl font-heading font-bold text-primary mb-3">
              {t("participatePage.cocoa.title")}
            </h3>
            <!-- Description -->
            <p class="text-gray-600 leading-relaxed text-sm">
              {t("participatePage.cocoa.desc")}
            </p>
            <!-- Corner accent -->
            <div class="absolute top-0 right-0 w-20 h-20 overflow-hidden rounded-tr-2xl">
              <div class="absolute top-0 right-0 w-20 h-20 bg-earth/[0.04] transform rotate-45 translate-x-10 -translate-y-10 group-hover:bg-earth/[0.08] transition-colors duration-300"></div>
            </div>
          </div>

          <!-- Card 4: Ecological Habitat -->
          <div
            class="group relative bg-white rounded-2xl p-8 transition-all duration-300 hover:-translate-y-2"
            style="box-shadow: 0 2px 8px rgba(11,91,75,0.06); transition: box-shadow 0.3s ease, transform 0.3s ease;"
            onmouseenter="this.style.boxShadow='0 16px 40px rgba(11,91,75,0.12)'"
            onmouseleave="this.style.boxShadow='0 2px 8px rgba(11,91,75,0.06)'"
          >
            <!-- Icon: House/Leaf -->
            <div class="w-14 h-14 rounded-xl bg-accent/10 flex items-center justify-center mb-6 group-hover:bg-accent/15 transition-colors duration-300">
              <svg class="w-7 h-7 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 12l9-9 9 9" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 10v10a1 1 0 001 1h12a1 1 0 001-1V10" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 21c0 0-3-3-3-6s3-6 3-6 3 3 3 6-3 6-3 6z" />
              </svg>
            </div>
            <!-- Title -->
            <h3 class="text-xl font-heading font-bold text-primary mb-3">
              {t("participatePage.habitat.title")}
            </h3>
            <!-- Description -->
            <p class="text-gray-600 leading-relaxed text-sm">
              {t("participatePage.habitat.desc")}
            </p>
            <!-- Corner accent -->
            <div class="absolute top-0 right-0 w-20 h-20 overflow-hidden rounded-tr-2xl">
              <div class="absolute top-0 right-0 w-20 h-20 bg-accent/[0.04] transform rotate-45 translate-x-10 -translate-y-10 group-hover:bg-accent/[0.08] transition-colors duration-300"></div>
            </div>
          </div>

          <!-- Card 5: Free Donation -->
          <div
            class="group relative bg-white rounded-2xl p-8 transition-all duration-300 hover:-translate-y-2"
            style="box-shadow: 0 2px 8px rgba(11,91,75,0.06); transition: box-shadow 0.3s ease, transform 0.3s ease;"
            onmouseenter="this.style.boxShadow='0 16px 40px rgba(11,91,75,0.12)'"
            onmouseleave="this.style.boxShadow='0 2px 8px rgba(11,91,75,0.06)'"
          >
            <!-- Icon: Heart -->
            <div class="w-14 h-14 rounded-xl bg-primary/10 flex items-center justify-center mb-6 group-hover:bg-primary/15 transition-colors duration-300">
              <svg class="w-7 h-7 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" />
              </svg>
            </div>
            <!-- Title -->
            <h3 class="text-xl font-heading font-bold text-primary mb-3">
              {t("participatePage.donation.title")}
            </h3>
            <!-- Description -->
            <p class="text-gray-600 leading-relaxed text-sm">
              {t("participatePage.donation.desc")}
            </p>
            <!-- Corner accent -->
            <div class="absolute top-0 right-0 w-20 h-20 overflow-hidden rounded-tr-2xl">
              <div class="absolute top-0 right-0 w-20 h-20 bg-primary/[0.04] transform rotate-45 translate-x-10 -translate-y-10 group-hover:bg-primary/[0.08] transition-colors duration-300"></div>
            </div>
          </div>

        </div>

        <!-- Get Involved CTA -->
        <div class="text-center mt-16">
          <a
            href="/contacts"
            class="group inline-flex items-center gap-3 bg-primary text-white font-semibold text-lg px-10 py-4 rounded-full transition-all duration-300 hover:bg-primary-dark hover:shadow-lg hover:shadow-primary/20 hover:-translate-y-0.5 active:translate-y-0"
          >
            <span>{t("participatePage.getInvolved")}</span>
            <svg
              class="w-5 h-5 transition-transform duration-300 group-hover:translate-x-1"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      </div>
    </section>

    <Testimonials lang={lang} />
    <CallToAction lang={lang} />
  </main>
  <Footer lang={lang} />
</Layout>
