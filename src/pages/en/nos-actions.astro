---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Testimonials from "../../components/Testimonials.astro";
import CallToAction from "../../components/CallToAction.astro";
import Footer from "../../components/Footer.astro";
import { useTranslations } from "../../i18n/translations";

const lang = "en";
const t = useTranslations(lang);
---

<Layout
  title={`${t("actionsPage.title")} - Pachatopia`}
  description="Our projects: natural reserve creation, sustainable agriculture, responsible aquaculture, and local production enhancement in Colombia."
  lang={lang}
>
  <Header lang={lang} />
  <main>
    <!-- Hero Banner -->
    <section class="relative text-white py-24 md:py-32 overflow-hidden">
      <div class="absolute inset-0">
        <img src="/images/farm-hero.jpg" alt="" class="absolute inset-0 w-full h-full object-cover" aria-hidden="true" />
        <div class="absolute inset-0 bg-primary/80"></div>
      </div>
      <div class="container mx-auto px-6 text-center relative z-10">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-heading font-bold mb-6">
          {t("actionsPage.title")}
        </h1>
        <p class="text-xl md:text-2xl text-white/90 max-w-2xl mx-auto">
          {t("actionsPage.subtitle")}
        </p>
      </div>
      <!-- Wave divider -->
      <svg class="absolute bottom-0 left-0 w-full" viewBox="0 0 1440 80" fill="none" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none">
        <path d="M0 40C240 80 480 0 720 40C960 80 1200 0 1440 40V80H0V40Z" fill="white"/>
      </svg>
    </section>

    <!-- Action 1: Natural Reserve -->
    <section class="py-20 bg-white">
      <div class="container mx-auto px-6">
        <div class="max-w-5xl mx-auto grid grid-cols-1 md:grid-cols-12 gap-10 items-center">
          <div class="md:col-span-5 flex justify-center">
            <div class="overflow-hidden rounded-2xl shadow-lg">
              <img src="/images/reserve-naturelle.webp" alt="Natural reserve at Pachatopia" class="w-full h-auto object-cover" loading="lazy" />
            </div>
          </div>
          <div class="md:col-span-7">
            <h2 class="text-3xl md:text-4xl font-heading font-bold text-primary mb-4">
              {t("actions.reserve.title")}
            </h2>
            <p class="text-gray-600 leading-relaxed mb-6">
              {t("actionsPage.reserve.detail")}
            </p>
            <a href={lang === "en" ? "/en/contacts/" : "/contacts/"} class="inline-flex items-center gap-2 text-accent font-semibold hover:text-primary transition-colors">
              Contact
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Action 2: Sustainable Agriculture -->
    <section class="py-20 bg-cream">
      <div class="container mx-auto px-6">
        <div class="max-w-5xl mx-auto grid grid-cols-1 md:grid-cols-12 gap-10 items-center">
          <div class="md:col-span-7 md:order-1">
            <h2 class="text-3xl md:text-4xl font-heading font-bold text-primary mb-4">
              {t("actions.agriculture.title")}
            </h2>
            <p class="text-gray-600 leading-relaxed mb-6">
              {t("actionsPage.agriculture.detail")}
            </p>
            <a href={lang === "en" ? "/en/contacts/" : "/contacts/"} class="inline-flex items-center gap-2 text-accent font-semibold hover:text-primary transition-colors">
              Contact
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
            </a>
          </div>
          <div class="md:col-span-5 md:order-2 flex justify-center">
            <div class="overflow-hidden rounded-2xl shadow-lg">
              <img src="/images/agriculture-durable.webp" alt="Victor et Felix - sustainable agriculture at Pachatopia" class="w-full h-auto object-cover" loading="lazy" />
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Action 3: Production Enhancement -->
    <section class="py-20 bg-white">
      <div class="container mx-auto px-6">
        <div class="max-w-5xl mx-auto grid grid-cols-1 md:grid-cols-12 gap-10 items-center">
          <div class="md:col-span-5 flex justify-center">
            <div class="overflow-hidden rounded-2xl shadow-lg">
              <img src="/images/production-cafe.webp" alt="Sustainable coffee culture at Pachatopia" class="w-full h-auto object-cover" loading="lazy" />
            </div>
          </div>
          <div class="md:col-span-7">
            <h2 class="text-3xl md:text-4xl font-heading font-bold text-primary mb-4">
              {t("actions.production.title")}
            </h2>
            <p class="text-gray-600 leading-relaxed mb-6">
              {t("actionsPage.production.detail")}
            </p>
            <a href={lang === "en" ? "/en/contacts/" : "/contacts/"} class="inline-flex items-center gap-2 text-accent font-semibold hover:text-primary transition-colors">
              Contact
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Action 4: Sustainable Aquaculture -->
    <section class="py-20 bg-cream">
      <div class="container mx-auto px-6">
        <div class="max-w-5xl mx-auto grid grid-cols-1 md:grid-cols-12 gap-10 items-center">
          <div class="md:col-span-7 md:order-1">
            <h2 class="text-3xl md:text-4xl font-heading font-bold text-primary mb-4">
              {t("actions.aquaculture.title")}
            </h2>
            <p class="text-gray-600 leading-relaxed mb-6">
              {t("actionsPage.aquaculture.detail")}
            </p>
            <a href={lang === "en" ? "/en/contacts/" : "/contacts/"} class="inline-flex items-center gap-2 text-accent font-semibold hover:text-primary transition-colors">
              Contact
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
            </a>
          </div>
          <div class="md:col-span-5 md:order-2 flex justify-center">
            <div class="overflow-hidden rounded-2xl shadow-lg">
              <img src="/images/aquaculture.webp" alt="Sustainable aquaculture at Pachatopia" class="w-full h-auto object-cover" loading="lazy" />
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Participation Call-Out -->
    <section class="py-20 bg-white relative overflow-hidden">
      <div class="container mx-auto px-6 relative z-10">
        <div class="max-w-5xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-10 items-center">
          <div class="overflow-hidden rounded-2xl shadow-lg">
            <img src="/images/community.jpg" alt="Pachatopia community and volunteers" class="w-full h-auto object-cover" loading="lazy" />
          </div>
          <div class="bg-cream rounded-2xl p-10 md:p-14 border-t-4 border-accent">
            <h2 class="text-2xl md:text-3xl font-heading font-bold text-primary mb-6">
              {t("actions.participate.title")}
            </h2>
            <p class="text-lg text-gray-700 leading-relaxed mb-6">
              {t("actionsPage.participate.text")}
            </p>
            <a href={lang === "en" ? "/en/contacts/" : "/contacts/"} class="inline-flex items-center gap-2 text-accent font-semibold hover:text-primary transition-colors">
              Contact
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Association Statement -->
    <section class="py-12 bg-cream">
      <div class="container mx-auto px-6">
        <div class="max-w-3xl mx-auto text-center">
          <p class="text-lg text-primary font-medium italic">
            {t("actionsPage.association")}
          </p>
        </div>
      </div>
    </section>

    <Testimonials lang={lang} />
    <CallToAction lang={lang} />
  </main>
  <Footer lang={lang} />
</Layout>
