---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Testimonials from "../../components/Testimonials.astro";
import CallToAction from "../../components/CallToAction.astro";
import Footer from "../../components/Footer.astro";
import { useTranslations } from "../../i18n/translations";

const lang = "en";
const t = useTranslations(lang);
---

<Layout title={`${t("actionsPage.title")} - Pachatopia`} lang={lang}>
  <Header lang={lang} />
  <main>
    <!-- Hero Banner -->
    <section class="relative bg-primary text-white py-24 md:py-32 overflow-hidden">
      <!-- Decorative shapes -->
      <svg class="absolute top-0 right-0 w-72 h-72 opacity-10" viewBox="0 0 200 200" fill="none" xmlns="http://www.w3.org/2000/svg">
        <circle cx="140" cy="60" r="50" fill="currentColor"/>
        <circle cx="100" cy="120" r="30" fill="currentColor"/>
        <circle cx="160" cy="140" r="20" fill="currentColor"/>
      </svg>
      <svg class="absolute bottom-0 left-0 w-56 h-56 opacity-10" viewBox="0 0 200 200" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M20 180C20 180 40 100 100 80C160 60 180 100 160 140C140 180 60 200 20 180Z" fill="currentColor"/>
      </svg>
      <div class="container mx-auto px-6 text-center relative z-10">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-heading font-bold mb-6">
          {t("actionsPage.title")}
        </h1>
        <p class="text-xl md:text-2xl text-white/90 max-w-2xl mx-auto">
          {t("actionsPage.subtitle")}
        </p>
      </div>
      <!-- Wave divider -->
      <svg class="absolute bottom-0 left-0 w-full" viewBox="0 0 1440 80" fill="none" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none">
        <path d="M0 40C240 80 480 0 720 40C960 80 1200 0 1440 40V80H0V40Z" fill="white"/>
      </svg>
    </section>

    <!-- Action 1: Natural Reserve -->
    <section class="py-20 bg-white">
      <div class="container mx-auto px-6">
        <div class="max-w-5xl mx-auto grid grid-cols-1 md:grid-cols-12 gap-10 items-center">
          <div class="md:col-span-3 flex justify-center">
            <div class="w-28 h-28 bg-primary/10 rounded-full flex items-center justify-center">
              <!-- Tree icon -->
              <svg class="w-14 h-14 text-primary" viewBox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M32 6L16 28h8L14 42h10l-6 16h28l-6-16h10L40 28h8L32 6Z" fill="currentColor" opacity="0.2"/>
                <path d="M32 6L16 28h8L14 42h10l-6 16h28l-6-16h10L40 28h8L32 6Z" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/>
                <rect x="29" y="52" width="6" height="10" rx="1" fill="currentColor" opacity="0.4"/>
              </svg>
            </div>
          </div>
          <div class="md:col-span-9">
            <h2 class="text-3xl md:text-4xl font-heading font-bold text-primary mb-4">
              {t("actions.reserve.title")}
            </h2>
            <p class="text-gray-600 leading-relaxed mb-6">
              {t("actionsPage.reserve.detail")}
            </p>
            <a href={lang === "en" ? "/en/contacts/" : "/contacts/"} class="inline-flex items-center gap-2 text-accent font-semibold hover:text-primary transition-colors">
              Contact
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Action 2: Sustainable Agriculture -->
    <section class="py-20 bg-cream">
      <div class="container mx-auto px-6">
        <div class="max-w-5xl mx-auto grid grid-cols-1 md:grid-cols-12 gap-10 items-center">
          <div class="md:col-span-9 md:order-1">
            <h2 class="text-3xl md:text-4xl font-heading font-bold text-primary mb-4">
              {t("actions.agriculture.title")}
            </h2>
            <p class="text-gray-600 leading-relaxed mb-6">
              {t("actionsPage.agriculture.detail")}
            </p>
            <a href={lang === "en" ? "/en/contacts/" : "/contacts/"} class="inline-flex items-center gap-2 text-accent font-semibold hover:text-primary transition-colors">
              Contact
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
            </a>
          </div>
          <div class="md:col-span-3 md:order-2 flex justify-center">
            <div class="w-28 h-28 bg-accent/10 rounded-full flex items-center justify-center">
              <!-- Plant/sprout icon -->
              <svg class="w-14 h-14 text-accent" viewBox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M32 58V30" stroke="currentColor" stroke-width="2.5" stroke-linecap="round"/>
                <path d="M32 38C32 38 20 36 16 24C12 12 24 6 24 6C24 6 32 14 32 30" fill="currentColor" opacity="0.2"/>
                <path d="M32 38C32 38 20 36 16 24C12 12 24 6 24 6C24 6 32 14 32 30" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M32 44C32 44 44 40 48 28C52 16 40 8 40 8C40 8 32 18 32 34" fill="currentColor" opacity="0.15"/>
                <path d="M32 44C32 44 44 40 48 28C52 16 40 8 40 8C40 8 32 18 32 34" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <ellipse cx="32" cy="60" rx="10" ry="3" fill="currentColor" opacity="0.1"/>
              </svg>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Action 3: Production Enhancement -->
    <section class="py-20 bg-white">
      <div class="container mx-auto px-6">
        <div class="max-w-5xl mx-auto grid grid-cols-1 md:grid-cols-12 gap-10 items-center">
          <div class="md:col-span-3 flex justify-center">
            <div class="w-28 h-28 bg-primary/10 rounded-full flex items-center justify-center">
              <!-- Box/package icon -->
              <svg class="w-14 h-14 text-primary" viewBox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M32 8L8 20V44L32 56L56 44V20L32 8Z" fill="currentColor" opacity="0.15"/>
                <path d="M32 8L8 20V44L32 56L56 44V20L32 8Z" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/>
                <path d="M8 20L32 32L56 20" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/>
                <path d="M32 32V56" stroke="currentColor" stroke-width="2"/>
                <path d="M20 14L44 26" stroke="currentColor" stroke-width="1.5" stroke-dasharray="3 2"/>
              </svg>
            </div>
          </div>
          <div class="md:col-span-9">
            <h2 class="text-3xl md:text-4xl font-heading font-bold text-primary mb-4">
              {t("actions.production.title")}
            </h2>
            <p class="text-gray-600 leading-relaxed mb-6">
              {t("actionsPage.production.detail")}
            </p>
            <a href={lang === "en" ? "/en/contacts/" : "/contacts/"} class="inline-flex items-center gap-2 text-accent font-semibold hover:text-primary transition-colors">
              Contact
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Action 4: Sustainable Aquaculture -->
    <section class="py-20 bg-cream">
      <div class="container mx-auto px-6">
        <div class="max-w-5xl mx-auto grid grid-cols-1 md:grid-cols-12 gap-10 items-center">
          <div class="md:col-span-9 md:order-1">
            <h2 class="text-3xl md:text-4xl font-heading font-bold text-primary mb-4">
              {t("actions.aquaculture.title")}
            </h2>
            <p class="text-gray-600 leading-relaxed mb-6">
              {t("actionsPage.aquaculture.detail")}
            </p>
            <a href={lang === "en" ? "/en/contacts/" : "/contacts/"} class="inline-flex items-center gap-2 text-accent font-semibold hover:text-primary transition-colors">
              Contact
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
            </a>
          </div>
          <div class="md:col-span-3 md:order-2 flex justify-center">
            <div class="w-28 h-28 bg-accent/10 rounded-full flex items-center justify-center">
              <!-- Fish icon -->
              <svg class="w-14 h-14 text-accent" viewBox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M48 32C48 32 40 16 24 16C8 16 4 32 4 32C4 32 8 48 24 48C40 48 48 32 48 32Z" fill="currentColor" opacity="0.2"/>
                <path d="M48 32C48 32 40 16 24 16C8 16 4 32 4 32C4 32 8 48 24 48C40 48 48 32 48 32Z" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/>
                <path d="M52 16L48 32L52 48C52 48 60 40 60 32C60 24 52 16 52 16Z" fill="currentColor" opacity="0.15"/>
                <path d="M52 16L48 32L52 48C52 48 60 40 60 32C60 24 52 16 52 16Z" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/>
                <circle cx="16" cy="28" r="3" fill="currentColor"/>
                <path d="M24 24C28 28 28 36 24 40" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                <path d="M30 22C36 28 36 36 30 42" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
              </svg>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Participation Call-Out -->
    <section class="py-20 bg-white relative overflow-hidden">
      <!-- Decorative background shapes -->
      <svg class="absolute top-0 left-0 w-40 h-40 text-accent/5" viewBox="0 0 160 160" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
        <circle cx="40" cy="40" r="60"/>
        <circle cx="100" cy="80" r="40"/>
      </svg>
      <svg class="absolute bottom-0 right-0 w-48 h-48 text-primary/5" viewBox="0 0 160 160" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
        <path d="M80 10C80 10 140 40 140 100C140 140 100 160 80 150C60 160 20 140 20 100C20 40 80 10 80 10Z"/>
      </svg>
      <div class="container mx-auto px-6 relative z-10">
        <div class="max-w-3xl mx-auto text-center">
          <div class="bg-cream rounded-2xl p-10 md:p-14 border-t-4 border-accent">
            <h2 class="text-2xl md:text-3xl font-heading font-bold text-primary mb-6">
              {t("actions.participate.title")}
            </h2>
            <p class="text-lg text-gray-700 leading-relaxed mb-6">
              {t("actionsPage.participate.text")}
            </p>
            <a href={lang === "en" ? "/en/contacts/" : "/contacts/"} class="inline-flex items-center gap-2 text-accent font-semibold hover:text-primary transition-colors">
              Contact
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Association Statement -->
    <section class="py-12 bg-cream">
      <div class="container mx-auto px-6">
        <div class="max-w-3xl mx-auto text-center">
          <p class="text-lg text-primary font-medium italic">
            {t("actionsPage.association")}
          </p>
        </div>
      </div>
    </section>

    <Testimonials lang={lang} />
    <CallToAction lang={lang} />
  </main>
  <Footer lang={lang} />
</Layout>
