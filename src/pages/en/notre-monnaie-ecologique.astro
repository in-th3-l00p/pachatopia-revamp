---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Testimonials from "../../components/Testimonials.astro";
import CallToAction from "../../components/CallToAction.astro";
import Footer from "../../components/Footer.astro";
import { useTranslations } from "../../i18n/translations";

const lang = "en";
const t = useTranslations(lang);
---

<Layout
  title="Our Ecological Currency - Pachatopia"
  description="Discover PachaCoin, PachaPeso, and PachaDream: our ecological currency system supporting the local economy and sustainable initiatives at Pachatopia."
  lang={lang}
>
  <Header lang={lang} />
  <main>
    <!-- Hero Banner -->
    <section class="relative text-white py-24 md:py-36 overflow-hidden">
      <div class="absolute inset-0">
        <img src="/images/production-cafe.webp" alt="" class="absolute inset-0 w-full h-full object-cover" aria-hidden="true" />
        <div class="absolute inset-0 bg-primary/80"></div>
      </div>
      <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-heading font-bold text-white leading-tight mb-6">
          {t("currencyPage.title")}
        </h1>
        <p class="text-lg md:text-xl text-white/85 leading-relaxed max-w-2xl mx-auto">
          {t("currencyPage.tagline")}
        </p>
      </div>
    </section>

    <!-- Introduction Section -->
    <section class="py-20 md:py-28 bg-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h2 class="text-3xl md:text-4xl font-heading font-bold text-primary mb-4">
            {t("currencyPage.intro.title")}
          </h2>
          <div class="w-20 h-1 bg-accent rounded-full mx-auto mb-8"></div>
          <p class="text-lg text-gray-600 leading-relaxed max-w-3xl mx-auto">
            {t("currencyPage.intro.text")}
          </p>
        </div>
      </div>
    </section>

    <!-- How It Works -->
    <section class="py-20 md:py-28 bg-cream">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-heading font-bold text-primary mb-4">
            {t("currencyPage.howItWorks.title")}
          </h2>
          <div class="w-20 h-1 bg-accent rounded-full mx-auto mb-8"></div>
          <p class="text-lg text-gray-600 leading-relaxed max-w-3xl mx-auto">
            {t("currencyPage.howItWorks.text")}
          </p>
        </div>

        <!-- Value Display Boxes -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-12">
          <div class="relative bg-white rounded-2xl p-8 text-center border-2 border-primary/10 hover:border-primary/25 transition-colors duration-300"
            style="box-shadow: 0 4px 16px rgba(11,91,75,0.08);">
            <div class="w-16 h-16 rounded-full bg-primary/10 flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 008.716-6.747M12 21a9.004 9.004 0 01-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 017.843 4.582M12 3a8.997 8.997 0 00-7.843 4.582m15.686 0A11.953 11.953 0 0112 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0121 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0112 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 013 12c0-1.605.42-3.113 1.157-4.418" />
              </svg>
            </div>
            <p class="text-xl font-heading font-bold text-primary">
              {t("currencyPage.values.virtual")}
            </p>
          </div>
          <div class="relative bg-white rounded-2xl p-8 text-center border-2 border-accent/10 hover:border-accent/25 transition-colors duration-300"
            style="box-shadow: 0 4px 16px rgba(45,155,131,0.08);">
            <div class="w-16 h-16 rounded-full bg-accent/10 flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21 12a2.25 2.25 0 00-2.25-2.25H15a3 3 0 11-6 0H5.25A2.25 2.25 0 003 12m18 0v6a2.25 2.25 0 01-2.25 2.25H5.25A2.25 2.25 0 013 18v-6m18 0V9M3 12V9m18 0a2.25 2.25 0 00-2.25-2.25H5.25A2.25 2.25 0 013 9m18 0V6a2.25 2.25 0 00-2.25-2.25H5.25A2.25 2.25 0 013 6v3" />
              </svg>
            </div>
            <p class="text-xl font-heading font-bold text-accent">
              {t("currencyPage.values.physical")}
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Distribution Breakdown -->
    <section class="py-20 md:py-28 bg-white">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- Forest -->
          <div
            class="group relative rounded-2xl overflow-hidden text-center transition-all duration-300 hover:-translate-y-1"
            style="box-shadow: 0 2px 8px rgba(11,91,75,0.06); transition: box-shadow 0.3s ease, transform 0.3s ease;"
            onmouseenter="this.style.boxShadow='0 12px 32px rgba(11,91,75,0.1)'"
            onmouseleave="this.style.boxShadow='0 2px 8px rgba(11,91,75,0.06)'"
          >
            <div class="h-40 overflow-hidden">
              <img src="/images/reserve-naturelle.webp" alt="Forest reserve" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" loading="lazy" />
            </div>
            <div class="p-6 bg-cream/60">
              <div class="w-14 h-14 rounded-full bg-primary/10 flex items-center justify-center mx-auto mb-5 -mt-12 relative z-10 border-4 border-white">
                <svg class="w-7 h-7 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 21v-8m0 0c-2.5-3-5-5-5-8a5 5 0 0110 0c0 3-2.5 5-5 8z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M7 21h10" />
                </svg>
              </div>
              <p class="text-gray-700 leading-relaxed text-sm">
                {t("currencyPage.distribution.forest")}
              </p>
            </div>
          </div>
          <!-- Agriculture -->
          <div
            class="group relative rounded-2xl overflow-hidden text-center transition-all duration-300 hover:-translate-y-1"
            style="box-shadow: 0 2px 8px rgba(11,91,75,0.06); transition: box-shadow 0.3s ease, transform 0.3s ease;"
            onmouseenter="this.style.boxShadow='0 12px 32px rgba(11,91,75,0.1)'"
            onmouseleave="this.style.boxShadow='0 2px 8px rgba(11,91,75,0.06)'"
          >
            <div class="h-40 overflow-hidden">
              <img src="/images/agriculture-durable.webp" alt="Sustainable agriculture" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" loading="lazy" />
            </div>
            <div class="p-6 bg-cream/60">
              <div class="w-14 h-14 rounded-full bg-earth/10 flex items-center justify-center mx-auto mb-5 -mt-12 relative z-10 border-4 border-white">
                <svg class="w-7 h-7 text-earth" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17 8C17 8 15 4 12 4C9 4 7 8 7 12C7 16 9 20 12 20C15 20 17 16 17 12" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 4C12 4 10 8 10 12C10 16 12 20 12 20" />
                </svg>
              </div>
              <p class="text-gray-700 leading-relaxed text-sm">
                {t("currencyPage.distribution.agriculture")}
              </p>
            </div>
          </div>
          <!-- Habitat -->
          <div
            class="group relative rounded-2xl overflow-hidden text-center transition-all duration-300 hover:-translate-y-1"
            style="box-shadow: 0 2px 8px rgba(11,91,75,0.06); transition: box-shadow 0.3s ease, transform 0.3s ease;"
            onmouseenter="this.style.boxShadow='0 12px 32px rgba(11,91,75,0.1)'"
            onmouseleave="this.style.boxShadow='0 2px 8px rgba(11,91,75,0.06)'"
          >
            <div class="h-40 overflow-hidden">
              <img src="/images/community.jpg" alt="Ecological habitat" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" loading="lazy" />
            </div>
            <div class="p-6 bg-cream/60">
              <div class="w-14 h-14 rounded-full bg-accent/10 flex items-center justify-center mx-auto mb-5 -mt-12 relative z-10 border-4 border-white">
                <svg class="w-7 h-7 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 12l9-9 9 9" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 10v10a1 1 0 001 1h12a1 1 0 001-1V10" />
                </svg>
              </div>
              <p class="text-gray-700 leading-relaxed text-sm">
                {t("currencyPage.distribution.habitat")}
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Transformation Chain -->
    <section class="py-20 md:py-28 bg-cream">
      <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-heading font-bold text-primary mb-4">
            {t("currencyPage.transformation.title")}
          </h2>
          <div class="w-20 h-1 bg-accent rounded-full mx-auto mb-8"></div>
        </div>

        <!-- Visual Flow -->
        <div class="flex flex-col md:flex-row items-center justify-center gap-4 md:gap-0">
          <!-- Step 1: PachaCoin -->
          <div class="flex-shrink-0 bg-white rounded-2xl px-8 py-6 text-center border-2 border-primary/15"
            style="box-shadow: 0 4px 16px rgba(11,91,75,0.08);">
            <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center mx-auto mb-3">
              <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <circle cx="12" cy="12" r="9" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 7v10M9 9.5h4.5a2 2 0 010 4H9" />
              </svg>
            </div>
            <p class="font-heading font-bold text-primary text-lg">PachaCoin</p>
          </div>

          <!-- Arrow -->
          <div class="hidden md:flex items-center px-3">
            <svg class="w-10 h-10 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </div>
          <div class="md:hidden flex items-center py-1">
            <svg class="w-8 h-8 text-accent rotate-90" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </div>

          <!-- Step 2: PachaPeso -->
          <div class="flex-shrink-0 bg-white rounded-2xl px-8 py-6 text-center border-2 border-accent/15"
            style="box-shadow: 0 4px 16px rgba(45,155,131,0.08);">
            <div class="w-12 h-12 rounded-full bg-accent/10 flex items-center justify-center mx-auto mb-3">
              <svg class="w-6 h-6 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <circle cx="12" cy="12" r="9" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 7v10M9 9.5h4.5a2 2 0 010 4H9" />
              </svg>
            </div>
            <p class="font-heading font-bold text-accent text-lg">PachaPeso</p>
          </div>

          <!-- Arrow -->
          <div class="hidden md:flex items-center px-3">
            <svg class="w-10 h-10 text-earth" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </div>
          <div class="md:hidden flex items-center py-1">
            <svg class="w-8 h-8 text-earth rotate-90" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </div>

          <!-- Step 3: PachaDream -->
          <div class="flex-shrink-0 bg-white rounded-2xl px-8 py-6 text-center border-2 border-earth/15"
            style="box-shadow: 0 4px 16px rgba(139,111,71,0.08);">
            <div class="w-12 h-12 rounded-full bg-earth/10 flex items-center justify-center mx-auto mb-3">
              <svg class="w-6 h-6 text-earth" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z" />
              </svg>
            </div>
            <p class="font-heading font-bold text-earth text-lg">PachaDream</p>
          </div>
        </div>

        <!-- Description cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-10">
          <div class="bg-white rounded-xl p-6 border border-primary/10">
            <h4 class="font-heading font-bold text-primary mb-2">PachaCoin (PC)</h4>
            <p class="text-gray-600 text-sm leading-relaxed">{t("currencyPage.transformation.pc")}</p>
          </div>
          <div class="bg-white rounded-xl p-6 border border-accent/10">
            <h4 class="font-heading font-bold text-accent mb-2">PachaPeso (PP)</h4>
            <p class="text-gray-600 text-sm leading-relaxed">{t("currencyPage.transformation.pp")}</p>
          </div>
          <div class="bg-white rounded-xl p-6 border border-earth/10">
            <h4 class="font-heading font-bold text-earth mb-2">PachaDream (PD)</h4>
            <p class="text-gray-600 text-sm leading-relaxed">{t("currencyPage.transformation.pd")}</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Additional Info Sections (2-col grid) -->
    <section class="py-20 md:py-28 bg-white">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">

          <!-- Transparency -->
          <div
            class="group bg-cream/60 rounded-2xl p-8 transition-all duration-300 hover:-translate-y-1"
            style="box-shadow: 0 2px 8px rgba(11,91,75,0.06); transition: box-shadow 0.3s ease, transform 0.3s ease;"
            onmouseenter="this.style.boxShadow='0 12px 32px rgba(11,91,75,0.1)'"
            onmouseleave="this.style.boxShadow='0 2px 8px rgba(11,91,75,0.06)'"
          >
            <div class="flex items-center gap-3 mb-4">
              <div class="w-10 h-10 rounded-lg bg-primary/10 flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <h3 class="text-xl font-heading font-bold text-primary">
                {t("currencyPage.transparency.title")}
              </h3>
            </div>
            <p class="text-gray-600 leading-relaxed">
              {t("currencyPage.transparency.text")}
            </p>
          </div>

          <!-- Incentives -->
          <div
            class="group bg-cream/60 rounded-2xl p-8 transition-all duration-300 hover:-translate-y-1"
            style="box-shadow: 0 2px 8px rgba(11,91,75,0.06); transition: box-shadow 0.3s ease, transform 0.3s ease;"
            onmouseenter="this.style.boxShadow='0 12px 32px rgba(11,91,75,0.1)'"
            onmouseleave="this.style.boxShadow='0 2px 8px rgba(11,91,75,0.06)'"
          >
            <div class="flex items-center gap-3 mb-4">
              <div class="w-10 h-10 rounded-lg bg-accent/10 flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09zM18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.455 2.456L21.75 6l-1.036.259a3.375 3.375 0 00-2.455 2.456z" />
                </svg>
              </div>
              <h3 class="text-xl font-heading font-bold text-primary">
                {t("currencyPage.incentives.title")}
              </h3>
            </div>
            <p class="text-gray-600 leading-relaxed">
              {t("currencyPage.incentives.text")}
            </p>
          </div>

          <!-- Why Participate -->
          <div
            class="group bg-cream/60 rounded-2xl p-8 transition-all duration-300 hover:-translate-y-1 md:col-span-2"
            style="box-shadow: 0 2px 8px rgba(11,91,75,0.06); transition: box-shadow 0.3s ease, transform 0.3s ease;"
            onmouseenter="this.style.boxShadow='0 12px 32px rgba(11,91,75,0.1)'"
            onmouseleave="this.style.boxShadow='0 2px 8px rgba(11,91,75,0.06)'"
          >
            <div class="flex items-center gap-3 mb-6">
              <div class="w-10 h-10 rounded-lg bg-primary/10 flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <h3 class="text-xl font-heading font-bold text-primary">
                {t("currencyPage.whyParticipate.title")}
              </h3>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div class="flex items-start gap-3">
                <span class="text-accent font-bold mt-0.5">1.</span>
                <p class="text-gray-600 leading-relaxed text-sm"><strong>Ecological Impact:</strong> {t("currencyPage.whyParticipate.impact")}</p>
              </div>
              <div class="flex items-start gap-3">
                <span class="text-accent font-bold mt-0.5">2.</span>
                <p class="text-gray-600 leading-relaxed text-sm"><strong>Sustainable Products:</strong> {t("currencyPage.whyParticipate.products")}</p>
              </div>
              <div class="flex items-start gap-3">
                <span class="text-accent font-bold mt-0.5">3.</span>
                <p class="text-gray-600 leading-relaxed text-sm"><strong>Ecological Habitat:</strong> {t("currencyPage.whyParticipate.habitat")}</p>
              </div>
              <div class="flex items-start gap-3">
                <span class="text-accent font-bold mt-0.5">4.</span>
                <p class="text-gray-600 leading-relaxed text-sm"><strong>Long-Term Engagement:</strong> {t("currencyPage.whyParticipate.longterm")}</p>
              </div>
            </div>
          </div>

          <!-- Future Projects -->
          <div
            class="group bg-cream/60 rounded-2xl p-8 transition-all duration-300 hover:-translate-y-1 md:col-span-2"
            style="box-shadow: 0 2px 8px rgba(11,91,75,0.06); transition: box-shadow 0.3s ease, transform 0.3s ease;"
            onmouseenter="this.style.boxShadow='0 12px 32px rgba(11,91,75,0.1)'"
            onmouseleave="this.style.boxShadow='0 2px 8px rgba(11,91,75,0.06)'"
          >
            <div class="flex items-center gap-3 mb-6">
              <div class="w-10 h-10 rounded-lg bg-accent/10 flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15.59 14.37a6 6 0 01-5.84 7.38v-4.8m5.84-2.58a14.98 14.98 0 006.16-12.12A14.98 14.98 0 009.631 8.41m5.96 5.96a14.926 14.926 0 01-5.841 2.58m-.119-8.54a6 6 0 00-7.381 5.84h4.8m2.581-5.84a14.927 14.927 0 00-2.58 5.84m2.699 2.7c-.103.021-.207.041-.311.06a15.09 15.09 0 01-2.448-2.448 14.9 14.9 0 01.06-.312m-2.24 2.39a4.493 4.493 0 00-1.757 4.306 4.493 4.493 0 004.306-1.758M16.5 9a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0z" />
                </svg>
              </div>
              <h3 class="text-xl font-heading font-bold text-primary">
                {t("currencyPage.future.title")}
              </h3>
            </div>
            <div class="space-y-4">
              <div class="bg-white/60 rounded-lg p-4">
                <h4 class="font-semibold text-primary text-sm mb-1">Coffee in Colombia</h4>
                <p class="text-gray-600 leading-relaxed text-sm">{t("currencyPage.future.coffee")}</p>
              </div>
              <div class="bg-white/60 rounded-lg p-4">
                <h4 class="font-semibold text-primary text-sm mb-1">Forest Protection</h4>
