---
import { useTranslations, getLocalizedPath } from '../i18n/translations';

interface Props {
  lang?: "fr" | "en";
}

const { lang = "fr" } = Astro.props;
const t = useTranslations(lang);

const navLinks = [
  { label: t("nav.home"), path: "/" },
  { label: t("nav.about"), path: "/a-propos-de-nous/" },
  { label: t("nav.actions"), path: "/nos-actions/" },
  { label: t("nav.participate"), path: "/comment-participer/" },
  { label: t("nav.currency"), path: "/notre-monnaie-ecologique/" },
  { label: t("nav.faq"), path: "/faq/" },
  { label: t("nav.info"), path: "/informations/" },
  { label: t("nav.contact"), path: "/contacts/" },
];
---

<footer data-testid="footer" class="bg-primary text-white">
  <!-- Main Footer Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 lg:py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10 lg:gap-12">

      <!-- Brand Column -->
      <div>
        <a href={getLocalizedPath("/", lang)} class="inline-block mb-4">
          <img src="/images/Logo.png" alt="Pachatopia logo" class="h-12 w-auto" />
        </a>
        <p class="text-white/80 italic mb-6 text-sm leading-relaxed">
          {t("about.association")}
        </p>

        <div class="space-y-3 text-sm">
          <!-- Address -->
          <div class="flex items-start gap-3">
            <svg class="w-5 h-5 mt-0.5 shrink-0 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <span class="text-white/80">{t("footer.address")}</span>
          </div>

          <!-- Email -->
          <div class="flex items-start gap-3">
            <svg class="w-5 h-5 mt-0.5 shrink-0 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <a
              href="mailto:info.pachatopia@gmail.com"
              class="text-white/80 hover:text-accent transition-colors duration-200"
            >
              info.pachatopia@gmail.com
            </a>
          </div>

          <!-- Phone / WhatsApp -->
          <div class="flex items-start gap-3">
            <svg class="w-5 h-5 mt-0.5 shrink-0 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            <div>
              <a
                href="tel:+33631663624"
                class="text-white/80 hover:text-accent transition-colors duration-200"
              >
                +33 6 31 66 36 24
              </a>
              <a
                href="https://wa.me/33631663624?text=Bonjour%20je%20souhaite%20en%20savoir%20plus%20sur%20pachatopia"
                target="_blank"
                rel="noopener noreferrer"
                class="block text-accent/80 hover:text-accent text-xs mt-0.5 transition-colors duration-200"
              >
                WhatsApp
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Quick Links Column -->
      <div>
        <h3 class="text-lg font-heading font-semibold mb-5">
          {t("footer.quicklinks")}
        </h3>
        <nav aria-label={lang === "fr" ? "Liens du pied de page" : "Footer navigation"}>
          <ul class="space-y-2.5">
            {navLinks.map((link) => (
              <li>
                <a
                  href={getLocalizedPath(link.path, lang)}
                  class="text-white/80 hover:text-accent transition-colors duration-200 text-sm inline-flex items-center gap-2"
                >
                  <svg class="w-3 h-3 text-accent" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </nav>
      </div>

      <!-- Newsletter Column -->
      <div>
        <h3 class="text-lg font-heading font-semibold mb-5">
          {t("footer.newsletter.title")}
        </h3>
        <p class="text-white/80 text-sm mb-5 leading-relaxed">
          {t("footer.newsletter.text")}
        </p>
        <form data-testid="footer-newsletter" class="space-y-3">
          <div>
            <label for="footer-email" class="sr-only">
              {t("footer.newsletter.placeholder")}
            </label>
            <input
              type="email"
              id="footer-email"
              name="email"
              required
              placeholder={t("footer.newsletter.placeholder")}
              class="w-full px-4 py-2.5 rounded-lg bg-white/10 border border-white/20 text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent text-sm transition-colors duration-200"
            />
          </div>
          <button
            type="submit"
            class="w-full px-4 py-2.5 bg-accent hover:bg-accent/80 text-white font-semibold rounded-lg text-sm transition-colors duration-200 cursor-pointer"
          >
            {t("footer.newsletter.button")}
          </button>
        </form>
      </div>
    </div>

    <!-- Social Media Icons -->
    <div class="mt-10 pt-8 border-t border-white/15">
      <div class="flex justify-center gap-5">
        <!-- Facebook -->
        <a
          href="https://facebook.com/pachatopia"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Facebook"
          class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center hover:bg-accent transition-colors duration-200"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"></path>
          </svg>
        </a>

        <!-- Instagram -->
        <a
          href="https://instagram.com/pachatopia"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Instagram"
          class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center hover:bg-accent transition-colors duration-200"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"></path>
          </svg>
        </a>

        <!-- Twitter / X -->
        <a
          href="https://x.com/pachatopia"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Twitter / X"
          class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center hover:bg-accent transition-colors duration-200"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="bg-primary-dark">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <p class="text-center text-white/60 text-xs">
        &copy; 2024 Pachatopia - {t("footer.rights")} | {t("footer.project")}
      </p>
    </div>
  </div>
</footer>
