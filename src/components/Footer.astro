---
import { useTranslations, getLocalizedPath } from '../i18n/translations';

interface Props {
  lang?: "fr" | "en";
}

const { lang = "fr" } = Astro.props;
const t = useTranslations(lang);

const navLinks = [
  { label: t("nav.home"), path: "/" },
  { label: t("nav.about"), path: "/a-propos-de-nous/" },
  { label: t("nav.actions"), path: "/nos-actions/" },
  { label: t("nav.participate"), path: "/comment-participer/" },
  { label: t("nav.currency"), path: "/notre-monnaie-ecologique/" },
  { label: t("nav.faq"), path: "/faq/" },
  { label: t("nav.info"), path: "/informations/" },
  { label: t("nav.contact"), path: "/contacts/" },
];
---

<footer data-testid="footer" class="bg-primary text-white">
  <!-- Main Footer Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 lg:py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10 lg:gap-12">

      <!-- Brand Column -->
      <div>
        <a href={getLocalizedPath("/", lang)} class="inline-block mb-4">
          <img src="/images/Logo.png" alt="Pachatopia logo" class="h-12 w-auto" />
        </a>
        <p class="text-white/80 italic mb-6 text-sm leading-relaxed">
          {t("about.association")}
        </p>

        <div class="space-y-3 text-sm">
          <!-- Address -->
          <div class="flex items-start gap-3">
            <svg class="w-5 h-5 mt-0.5 shrink-0 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <span class="text-white/80">{t("footer.address")}</span>
          </div>

          <!-- Email -->
          <div class="flex items-start gap-3">
            <svg class="w-5 h-5 mt-0.5 shrink-0 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <a
              href="mailto:info.pachatopia@gmail.com"
              class="text-white/80 hover:text-accent transition-colors duration-200"
            >
              info.pachatopia@gmail.com
            </a>
          </div>

          <!-- Phone / WhatsApp -->
          <div class="flex items-start gap-3">
            <svg class="w-5 h-5 mt-0.5 shrink-0 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            <div>
              <a
                href="tel:+33631663624"
                class="text-white/80 hover:text-accent transition-colors duration-200"
              >
                +33 6 31 66 36 24
              </a>
              <a
                href="https://wa.me/33631663624?text=Bonjour%20je%20souhaite%20en%20savoir%20plus%20sur%20pachatopia"
                target="_blank"
                rel="noopener noreferrer"
                class="block text-accent/80 hover:text-accent text-xs mt-0.5 transition-colors duration-200"
              >
                WhatsApp
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Quick Links Column -->
      <div>
        <h3 class="text-lg font-heading font-semibold mb-5">
          {t("footer.quicklinks")}
        </h3>
        <nav aria-label={lang === "fr" ? "Liens du pied de page" : "Footer navigation"}>
          <ul class="space-y-2.5">
            {navLinks.map((link) => (
              <li>
                <a
                  href={getLocalizedPath(link.path, lang)}
                  class="text-white/80 hover:text-accent transition-colors duration-200 text-sm inline-flex items-center gap-2"
                >
                  <svg class="w-3 h-3 text-accent" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </nav>
      </div>

      <!-- Newsletter Column -->
      <div>
        <h3 class="text-lg font-heading font-semibold mb-5">
          {t("footer.newsletter.title")}
        </h3>
        <p class="text-white/80 text-sm mb-5 leading-relaxed">
          {t("footer.newsletter.text")}
        </p>
        <form data-testid="footer-newsletter" class="space-y-3">
          <div>
            <label for="footer-email" class="sr-only">
              {t("footer.newsletter.placeholder")}
            </label>
            <input
              type="email"
              id="footer-email"
              name="email"
              required
              placeholder={t("footer.newsletter.placeholder")}
              class="w-full px-4 py-2.5 rounded-lg bg-white/10 border border-white/20 text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-golden focus:border-transparent text-sm transition-colors duration-200"
            />
          </div>
          <button
            type="submit"
            class="w-full px-4 py-2.5 bg-golden hover:bg-golden-dark text-primary font-semibold rounded-lg text-sm transition-colors duration-200 cursor-pointer"
          >
            {t("footer.newsletter.button")}
          </button>
        </form>
      </div>
    </div>

  </div>

  <!-- Bottom Bar -->
  <div class="bg-primary-dark">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <p class="text-center text-white/60 text-xs">
        &copy; 2026 Pachatopia - {t("footer.rights")} | {lang === "fr" ? "Réalisé par" : "Built by"} <a href="https://tiscacatalin.com" target="_blank" rel="noopener noreferrer" class="text-white/80 hover:text-golden transition-colors duration-200">Cătălin Tișcă</a>
      </p>
    </div>
  </div>
</footer>
